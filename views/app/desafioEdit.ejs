<html lang="pt-BR">

<head>
  <meta charset="utf-8">

  <title>Cadastro Atividade</title>

  <!-- Bootstrap core CSS -->
  <link rel="stylesheet" type="text/css" href="vendor/bootstrap/css/bootstrap.min.css">

  <!-- Custom fonts for this template -->
  <link rel="stylesheet" type="text/css" href="vendor/font-awesome/css/font-awesome.min.css">
  <link rel="stylesheet" type="text/css" href="vendor/simple-line-icons/css/simple-line-icons.css">
  <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Lato">
  <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Catamaran:100,200,300,400,500,600,700,800,900">
  <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Muli">

  <!-- Plugin CSS -->
  <link rel="stylesheet" type="text/css" href="device-mockups/device-mockups.min.css">

  <!-- Custom styles for this template -->
  <link rel="stylesheet" type="text/css" href="css/new-age.min.css">

</head>

<body>
  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg fixed-top bg-dark" id="mainNav">
    <div class="container">
      <font color="white">
        <h3> Zika Web </h3>
      </font>
    </div>
    </div>
  </nav>
  <!-- Fim Navigation -->



  <!-- Cadastro -->
  <section class="cadastro" id="cadastro">
    <div class="container">
      <div class="row">

        <div class="col-lg-8 my-auto">
          <div class="container-fluid">
            <div class="row">
              <div class="col-lg-12">
                <div class="feature-item">
                  <h3>DESAFIO EDITAR</h3>

                  <div style="padding-top:30px" class="panel-body">

                    <form id="signupform" class="form-horizontal" role="form" method="post" action="/desafio/edit/<%=data[0].id%>">
                      <div class="form-group">
                        <label for="name" class="col-md-3 control-label">Nome</label>
                        <div class="col-md-9">
                          <input type="text" required class="form-control" name="name" value="<%=data[0].name%>">
                        </div>
                      </div>
                      <div class="form-group">
                        <label for="description" class="col-md-3 control-label">Descrição</label>
                        <div class="col-md-9">
                          <textarea name="description" required rows="5" cols="40"> <%=data[0].description%></textarea>
                        </div>
                      </div>
                      <div class="form-group">
                        <label for="name" class="col-md-3 control-label">Tipo de desafio</label>
                        <div class="col-md-9">
                          <select class="form-control" id="sel1" required name="typeId">
                            <% for(var i=0; i < type.length; i++) { %>
                              <option value=<%=t ype[i].id %>>
                                <%= type[i].name %>
                              </option>
                              <% } %>
                          </select>
                        </div>
                      </div>
                      <div class="form-group">
                        <label for="points" class="col-md-3 control-label">Pontos</label>
                        <div class="col-md-9">
                          <input type="number" name="points" value="<%=data[0].points%>" required>
                        </div>
                      </div>
                      <a class="a-inside edit" href="/desafio/activate/<%=data[0].id%>">ativar</a>

                      <a class="a-inside delete" href="/desafio/deactivate/<%=data[0].id%>">desativar</a>

                      <div class="form-group">
                        <div class="col-md-offset-3 col-md-9">
                          <button id="btn-signup" type="submit" class="btn btn-info"><i class="icon-hand-right"></i>Salvar</button>
                        </div>
                      </div>


                    </form>
                  </div>
                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
  </section>
  <!-- Fim Cadastro-->

  <!-- Bootstrap core JavaScript -->
  <script type="text/js" src="../../vendor/jquery/jquery.min.js"></script>
  <script type="text/js" src="../../vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Plugin JavaScript -->
  <script type="text/js" src="../../vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for this template -->
  <script type="text/js" src="../../js/new-age.min.js"></script>

</body>

</html>