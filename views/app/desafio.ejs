<html lang="pt-BR">

<head>
  <meta charset="utf-8">

  <title>Cadastro Atividade</title>

  <!-- Bootstrap core CSS -->
  <link rel="stylesheet" type="text/css" href="vendor/bootstrap/css/bootstrap.min.css">

  <!-- Custom fonts for this template -->
  <link rel="stylesheet" type="text/css" href="vendor/font-awesome/css/font-awesome.min.css">
  <link rel="stylesheet" type="text/css" href="vendor/simple-line-icons/css/simple-line-icons.css">
  <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Lato">
  <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Catamaran:100,200,300,400,500,600,700,800,900">
  <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Muli">

  <!-- Plugin CSS -->
  <link rel="stylesheet" type="text/css" href="device-mockups/device-mockups.min.css">

  <!-- Custom styles for this template -->
  <link rel="stylesheet" type="text/css" href="css/new-age.min.css">

</head>

<body>
  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg fixed-top bg-dark" id="mainNav">
    <div class="container">
      <font color="white">
        <h3> Zika Web </h3>
      </font>
    </div>
    </div>
  </nav>
  <!-- Fim Navigation -->



  <!-- Cadastro -->
  <section class="cadastro" id="cadastro">
    <div class="container">
      <div class="row">

        <div class="col-lg-8 my-auto">
          <div class="container-fluid">
            <div class="row">
              <div class="col-lg-12">
                <div class="feature-item">
                  <h3>DESAFIO</h3>

                  <div style="padding-top:30px" class="panel-body">

                    <form id="signupform" class="form-horizontal" role="form" method="" action="">
                      <div class="form-group">
                        <label for="name" class="col-md-3 control-label">Nome</label>
                        <div class="col-md-9">
                          <%= data[0].act_name %>
                        </div>
                      </div>
                      <div class="form-group">
                        <label for="school" class="col-md-3 control-label">Descrição</label>
                        <div class="col-md-9">
                          <%= data[0].act_description %>
                        </div>
                      </div>
                      <div class="form-group">
                        <label for="points" class="col-md-3 control-label">Pontos</label>
                        <div class="col-md-9">
                          <%= data[0].points %>
                        </div>
                      </div>
                      <div class="form-group">
                        <label for="points" class="col-md-3 control-label">Tipo</label>
                        <div class="col-md-9">
                          <%= data[0].type_name %>
                        </div>
                      </div>
                      <div class="form-group">
                        <label for="points" class="col-md-3 control-label">Ativo</label>
                        <div class="col-md-9">
                          <%= data[0].active %>
                        </div>
                      </div>

                    </form>
                  </div>
                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
  </section>
  <!-- Fim Cadastro-->

  <!-- Bootstrap core JavaScript -->
  <script type="text/js" src="../vendor/jquery/jquery.min.js"></script>
  <script type="text/js" src="../vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Plugin JavaScript -->
  <script type="text/js" src="../vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for this template -->
  <script type="text/js" src="../js/new-age.min.js"></script>

</body>

</html>