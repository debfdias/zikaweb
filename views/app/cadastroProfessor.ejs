  <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Lato">
  <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Catamaran:100,200,300,400,500,600,700,800,900">
  <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Muli">

  <!-- Plugin CSS -->
  <link rel="stylesheet" type="text/css" href="device-mockups/device-mockups.min.css">

  <!-- Custom styles for this template -->
  <link rel="stylesheet" type="text/css" href="css/new-age.min.css">

</head>

<body>
  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg fixed-top bg-dark" id="mainNav">
    <div class="container">
      <font color="white">
        <h3> Zika Web </h3>
      </font>
    </div>
    </div>
  </nav>
  <!-- Fim Navigation -->

  <!-- Cadastro -->
  <section class="cadastro" id="cadastro">
    <div class="container">
      <div class="row">
        <div class="col-md-12">

          <h3>Cadastro Professor</h3>

          <form id="signupform" class="form-horizontal" role="form" method="post" action="/cadastro/professor">
            </br>
            <div class="row">

              <div class="col-md-6">
                <label>Nome</label>
                <input type="text" required class="form-control" name="name" placeholder="Nome">
              </div>
              <div class="col-md-6">
                <label>CPF</label>
                <input type="number" required class="form-control" name="cpf" placeholder="CPF">
              </div>


            </div>
            </br>

            <div class="row">

              <div class="col-md-6">
                <label>Data de nascimento</label>
                <input type="text" required class="form-control" name="birth" placeholder="Nascimento">
              </div>
              <div class="col-md-6">
                <label>Telefone</label>
                <input type="number" required class="form-control" name="phone" placeholder="Telefone">
              </div>

            </div>
            </br>


            <div class="row">

              <div class="col-md-6">
                <label>Endereço</label>
                <input type="text" required class="form-control" name="address" placeholder="Endereço">
              </div>
              <div class="col-md-6">
                <label>Escola</label>
                <select class="form-control" id="sel1" required name="schoolId">
                                      <% for(var i=0; i < data_school.length; i++) { %>
                                         <option value=<%= data_school[i].id %>><%= data_school[i].name %></option>
                                      <% } %>
                </select>
              </div>

            </div>
            </br>

            <div class="row">

              <div class="col-md-6">
                <label>Matéria</label>
                <input type="text" required class="form-control" name="subject" placeholder="Matéria">
              </div>
              <div class="col-md-6">
                <label>E-mail</label>
                <input type="text" required class="form-control" name="email" placeholder="Email">
              </div>

            </div>
            </br>


            <div class="row">

              <div class="col-md-6">
                <label>Senha</label>
                <input type="text" required class="form-control" name="password" placeholder="Senha">
              </div>
              <div class="col-md-6">
                <label>Confimar Senha</label>
                <input type="text" required class="form-control" name="confirm" placeholder="Repita a senha">
              </div>

            </div>
            </br>

            <hr>
            <div class="row">
              <div class="col-md-3">
                <button id="btn-signup" type="submit" class="btn btn-info"><i class="icon-hand-right"></i>Cadastrar</button>
              </div>
            </div>

          </form>

        </div>
      </div>
    </div>
  </section>
  <!-- Fim Cadastro-->

  <footer>
    <div class="container">
      <p>&copy; Your Website 2018. All Rights Reserved.</p>
      <ul class="list-inline">
        <li class="list-inline-item">
          <a href="#">Privacy</a>
        </li>
        <li class="list-inline-item">
          <a href="#">Terms</a>
        </li>
        <li class="list-inline-item">
          <a href="#">FAQ</a>
        </li>
      </ul>
    </div>
  </footer>

  <!-- Bootstrap core JavaScript -->
  <script type="text/js" src="../../vendor/jquery/jquery.min.js"></script>
  <script type="text/js" src="../../vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Plugin JavaScript -->
  <script type="text/js" src="../../vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for this template -->
  <script type="text/js" src="../../js/new-age.min.js"></script>

</body>

</html>
