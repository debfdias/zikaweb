<html lang="pt-BR">

<head>
  <meta charset="utf-8">

  <title>Cadastro</title>

  <!-- Bootstrap core CSS -->
  <link rel="stylesheet" type="text/css" href="vendor/bootstrap/css/bootstrap.min.css">

  <!-- Custom fonts for this template -->
  <link rel="stylesheet" type="text/css" href="vendor/font-awesome/css/font-awesome.min.css">
  <link rel="stylesheet" type="text/css" href="vendor/simple-line-icons/css/simple-line-icons.css">
  <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Lato">
  <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Catamaran:100,200,300,400,500,600,700,800,900">
  <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Muli">

  <!-- Plugin CSS -->
  <link rel="stylesheet" type="text/css" href="device-mockups/device-mockups.min.css">

  <!-- Custom styles for this template -->
  <link rel="stylesheet" type="text/css" href="css/new-age.min.css">

</head>

<body>

  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg fixed-top bg-dark" id="mainNav">
    <div class="container">
      <font color="white">
        <h3> Zika Web </h3>
      </font>
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <h5><a id="signinlink" href="/">Entrar</a> </h5>
        </li>
      </ul>
    </div>
    </div>
  </nav>
  <!-- Fim Navigation -->



  <!-- Cadastro -->
  <section class="cadastro" id="cadastro">
    <div class="container">
      <div class="row">

        <div class="col-lg-8 my-auto">
          <div class="container-fluid">
            <div class="row">
              <div class="col-lg-12">
                <div class="feature-item">

                  <h3>Informe seus dados:</h3>

                  <div style="padding-top:30px" class="panel-body">
                    <form id="signupform" class="form-horizontal" role="form" method="post" action="/cadastro">

                      <div class="form-group">
                        <label for="school" class="col-md-3 control-label">Estado</label>
                        <div class="col-md-9">
                          <select class="form-control" id="sel1" required name="stateId">
                                      <% for(var i=0; i < data_state.length; i++) { %>
                                         <option value=<%= data_state[i].id %>><%= data_state[i].name %></option>
                                      <% } %>
                                   </select>
                        </div>
                      </div>

                      <div class="form-group">
                        <label for="school" class="col-md-3 control-label">Perfil</label>
                        <div class="col-md-9">
                          <select class="form-control" id="sel1" required name="profileId">
                                      <% for(var i=0; i < data_profiles.length; i++) { %>
                                         <option value=<%= data_profiles[i].id %>><%= data_profiles[i].name %></option>
                                      <% } %>
                                   </select>
                        </div>
                      </div>
                      </br>

                      <hr>

                      <div class="form-group">
                        <div class="col-md-offset-3 col-md-9">
                          <button id="btn-signup" type="submit" class="btn btn-info">Continuar</button>

                        </div>
                      </div>


                    </form>
                  </div>

                </div>

              </div>
            </div>
          </div>
        </div>

        <div class="col-lg-4 my-auto">
          <div class="device-container">
            <div class="device-mockup iphone6_plus portrait white">
              <div class="device">
                <div class="screen">
                  <img src="../img/demo-screen-1.jpg" class="img-fluid">
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>
  <!-- Fim Cadastro-->

  <!-- Bootstrap core JavaScript -->
  <script type="text/js" src="../vendor/jquery/jquery.min.js"></script>
  <script type="text/js" src="../vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Plugin JavaScript -->
  <script type="text/js" src="../vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for this template -->
  <script type="text/js" src="../js/new-age.min.js"></script>
</body>

</html>
